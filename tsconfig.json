{
    "compilerOptions": {
        "target": "ES6",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "module": "Node16",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "Node16",
        "outDir": "build",
        "types": ["reflect-metadata"]
    },
    "exclude": ["node_modules/"],
    "include": ["src/**/*.ts"],
    "ts-node": {
        "files": true
    }
}
